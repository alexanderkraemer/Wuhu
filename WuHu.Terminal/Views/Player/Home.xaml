<UserControl x:Class="WuHu.Terminal.Views.Player.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WuHu.Terminal.Views.Player"
             mc:Ignorable="d" 
             d:DesignHeight="360" d:DesignWidth="640">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="1*" />
			<ColumnDefinition Width="2*" />
		</Grid.ColumnDefinitions>
		<Grid Grid.Column="0">
			<Border BorderThickness="2" BorderBrush="Black">
				<TextBlock>Agenda</TextBlock>
			</Border>
		</Grid>

		<Grid Grid.Column="1">
			<Grid.RowDefinitions>
				<RowDefinition Height="3*" />
				<RowDefinition Height="2*" />
			</Grid.RowDefinitions>

			<Border Grid.Row="0" BorderThickness="2" BorderBrush="Black">
				<TextBlock>Ranking</TextBlock>
			</Border>
			<Border Grid.Row="1" BorderThickness="2" BorderBrush="Black">
				<TextBlock>Statistics</TextBlock>
			</Border>
		</Grid>
	</Grid>
</UserControl>
