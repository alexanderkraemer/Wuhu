<UserControl x:Class="WuHu.Terminal.Views.Player.PlayerEdit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WuHu.Terminal.Views.Player"
             mc:Ignorable="d" 
              d:DesignHeight="360" d:DesignWidth="640">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="2*" />
			<ColumnDefinition Width="4*" />
		</Grid.ColumnDefinitions>
		<Grid Grid.Column="0" Margin="10">
			<Grid.RowDefinitions>
				<RowDefinition Height="2*" />
				<RowDefinition Height="1*" />
			</Grid.RowDefinitions>
			<StackPanel Grid.Row="0">
				<Image Source="images/img.jpg" />
			</StackPanel>
			<StackPanel Grid.Row="1" Margin="0 10">
				<Button Click="SavePlayerButtonClick">Save</Button>
				<Button Click="CancelPlayerButtonClick">Cancel</Button>
			</StackPanel>
		</Grid>
		<Grid Grid.Column="1">
			<Grid.RowDefinitions>
				<RowDefinition Height="1*" />
				<RowDefinition Height="1*" />
				<RowDefinition Height="1*" />
				<RowDefinition Height="1*" />
				<RowDefinition Height="1*" />
				<RowDefinition Height="1*" />
				<RowDefinition Height="1*" />
			</Grid.RowDefinitions>
			<Grid Grid.Row="0" VerticalAlignment="Center">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="3*" />
				</Grid.ColumnDefinitions>
				<Label Grid.Column="0" FontSize="12" VerticalAlignment="Center">First Name:</Label>
				<TextBox Name="tb_firstname" Grid.Column="1" FontSize="12" Margin="10"></TextBox>
			</Grid>
			<Grid Grid.Row="1" VerticalAlignment="Center">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="3*" />
				</Grid.ColumnDefinitions>
				<Label Grid.Column="0" FontSize="12" VerticalAlignment="Center">Last Name:</Label>
				<TextBox Name="tb_lastname" Grid.Column="1" FontSize="12" Margin="10"></TextBox>
			</Grid>
			<Grid Grid.Row="2" VerticalAlignment="Center">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="3*" />
				</Grid.ColumnDefinitions>
				<Label Grid.Column="0" FontSize="12" VerticalAlignment="Center">Nickname:</Label>
				<TextBox Name="tb_nickname" Grid.Column="1" FontSize="12" Margin="10"></TextBox>
			</Grid>
			<Grid Grid.Row="3" VerticalAlignment="Center">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="3*" />
				</Grid.ColumnDefinitions>
				<Label Grid.Column="0" FontSize="12" VerticalAlignment="Center">Skills:</Label>
				<TextBox Name="tb_skills"  Grid.Column="1" FontSize="12" Margin="10"></TextBox>
			</Grid>
			<Grid Grid.Row="4" VerticalAlignment="Center">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="3*" />
				</Grid.ColumnDefinitions>
				<Label Grid.Column="0" FontSize="12" VerticalAlignment="Center">Presence:</Label>
				<Grid Grid.Column="1">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="1*"/>
						<ColumnDefinition Width="1*"/>
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="1*" />
						<RowDefinition Height="1*" />
						<RowDefinition Height="1*" />
					</Grid.RowDefinitions>
					<CheckBox IsEnabled="True" IsChecked="{Binding isMonday}" Grid.Column="0" Grid.Row="0" Name="cb_presence_mo">Mo</CheckBox>
					<CheckBox IsEnabled="True" IsChecked="{Binding isMonday}" Grid.Column="1" Grid.Row="0" Name="cb_presence_tu">Tu</CheckBox>
					<CheckBox IsEnabled="True" IsChecked="{Binding isMonday}" Grid.Column="0" Grid.Row="1" Name="cb_presence_we">We</CheckBox>
					<CheckBox IsEnabled="True" IsChecked="{Binding isMonday}" Grid.Column="1" Grid.Row="1" Name="cb_presence_th">Th</CheckBox>
					<CheckBox IsEnabled="True" IsChecked="{Binding isMonday}" Grid.Column="0" Grid.Row="2" Name="cb_presence_fr">Fr</CheckBox>
					<CheckBox IsEnabled="True" IsChecked="{Binding isMonday}" Grid.Column="1" Grid.Row="2" Name="cb_presence_sa">Sa</CheckBox>
				</Grid>
			</Grid>
			<Grid Grid.Row="5">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="3*" />
				</Grid.ColumnDefinitions>
				<Label Grid.Column="0" FontSize="12" VerticalAlignment="Center">is Admin:</Label>
				<CheckBox IsEnabled="True" IsChecked="{Binding isAdmin}" Grid.Column="1" VerticalAlignment="Center"></CheckBox>
			</Grid>
		</Grid>
	</Grid>
</UserControl>
